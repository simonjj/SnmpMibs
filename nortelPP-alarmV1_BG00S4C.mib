alarmGroupBC02 OBJECT IDENTIFIER ::= { alarmGroupBC 2 }
alarmGroupBC02A OBJECT IDENTIFIER ::= { alarmGroupBC02 2 }



-- Notification Group:

-- NOTIFICATIONS   { criticalAlarm, majorAlarm, minorAlarm, 
--                   warningAlarm, clearedAlarm, indeterminateAlarm }
